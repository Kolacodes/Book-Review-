<% include ../partials/header %>

<html lang="en">
    <head>
        <title>BookReview</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        
    </head>

<div class="container">
    <div class="row">
            
            <div style="width:30%; margin:100px auto ">
                <h1>Edit <%= new_book.title %></h1>
                <form action="/books/<%= new_book._id %>?_method=PUT" method="POST">
                    <div class="form-group"> <input class="form-control" type="text" name="new_book[title]" value="<%= new_book.title %>"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="new_book[author]" value="<%= new_book.author %>"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="new_book[image]" value="<%= new_book.image %>"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="new_book[review]" value="<%= new_book.review %>"> </div>
                    <div class="form-group"> <button class="btn btn-lg btn-primary btn-block">Submit!</button> </div>
    
                </form>   
                <a href="/books">Go Back</a>
            </div>
    
    </div>
 </div>

